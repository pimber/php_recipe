{% extends 'base.html.twig' %}

{% block body %}

<div class="row d-flex justify-content-center mb-4">
    <h3 class="my-5 d-flex justify-content-center text-white">Random Quote</h3>
    <div class="col-3"></div>
    <div class="col-6 mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for recipe">
        </div>
    </div>
    <div class="col-3"></div>
</div>
<div class="row">
    <div class="col-12">
        <div class="row">
            {% for recipe in recipes %}
                {% include 'modal/card.html.twig' with {'recipe': recipe } %}
            {% endfor %}
        </div>
    </div>
</div>
<div class="row justify-content-center mt-4">
    <div class="col-auto">
        {{ knp_pagination_render(recipes, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
</div>

{# Recipe Modal View here #}
{% for recipe in recipes %}
    {% include 'modal/showrecipe.html.twig' with {'recipe': recipe } %}
{% endfor %}

{% endblock %}