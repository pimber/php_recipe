{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-12">
        <h3 class="my-5 d-flex justify-content-center text-white">Find a recipe here</h3>
        <form class="d-flex align-items-center flex-column">
            <div class="mb-3 w-50">
                <input type="text" placeholder="Search here to find recipe" class="form-control" id="fullNameInput" aria-describedby="fullNameHelp">
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="row">
            {% for recipe in recipes %}
                {% include 'modal/card.html.twig' with {'recipe': recipe } %}
            {% endfor %}
        </div>
    </div>
</div>
<div class="row justify-content-center mt-4">
    <div class="col-auto">
        {{ knp_pagination_render(recipes, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
</div>

{# Recipe Modal View here #}
{% for recipe in recipes %}
    {% include 'modal/showrecipe.html.twig' with {'recipe': recipe } %}
{% endfor %}

{% endblock %}